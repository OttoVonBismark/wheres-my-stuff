<h1 class='form-header'>Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='form-grid'>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <%= f.label :password, "Password (leave blank if you don't want to change it)" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", class: 'text-field' %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field' %>

    <%= f.label :current_password "Current password (we need your current password to confirm your changes)" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'text-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn mb-2' %>
  </div>
<% end %>

<h3 class='font-bold'>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
