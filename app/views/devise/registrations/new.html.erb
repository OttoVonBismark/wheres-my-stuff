<h1 class='form-header'>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-grid">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>

    <%= f.label :username %>
    <%= f.text_field :username, autocomplete: 'username', class: 'text-field' %>

    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", class: 'text-field' %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
