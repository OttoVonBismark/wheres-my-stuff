<h1 class='form-header'>Change your password</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-grid">
    <%= f.label :password, "New password" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", class: 'text-field' %>

    <%= f.label :password_confirmation, "Confirm new password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'text-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn mb-2' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
